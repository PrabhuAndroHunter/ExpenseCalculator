<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6">

    <TextView
        android:id="@+id/text_view_account_details_date"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="Date" />

    <TextView
        android:id="@+id/text_view_account_details_description"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="Description" />

    <TextView
        android:id="@+id/text_view_account_details_category"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="Category" />

    <TextView
        android:id="@+id/text_view_account_details_expense"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="" />

    <TextView
        android:id="@+id/text_view_account_details_income"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="" />

    <TextView
        android:id="@+id/text_view_account_details_balance"
        style="@style/account_details_item"
        android:layout_weight="1"
        android:text="Balance" />

</LinearLayout>
