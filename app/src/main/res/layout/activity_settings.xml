<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    tools:context="com.pub.expensecalculator.activity.SettingsActivity">

    <RelativeLayout
        android:id="@+id/layout_reset_all_category_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/reset_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_reset" />

        <TextView
            android:id="@+id/textView_reset_all_category_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/reset_imageView"
            android:text="Reset All Category and Source"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        style="@style/AppTheme.Widget.Divider.Line.Vertical"
        android:layout_below="@+id/layout_reset_all_category_source" />


    <RelativeLayout
        android:id="@+id/layout_delete_all_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_reset_all_category_source"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/delete_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/textView_delete_all_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/delete_imageView"
            android:text="Delete All Transactions"
            android:textSize="16sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/AppTheme.Widget.Divider.Line.Vertical"
        android:layout_below="@+id/layout_delete_all_transactions" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="App Version" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/version_name"
            android:gravity="center_horizontal"
            android:text="V1.1" />

    </RelativeLayout>


</RelativeLayout>
